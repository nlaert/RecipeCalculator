<Page
    x:Class="RecipeCalculator.CalculationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Hub Header="Hub">
        <HubSection x:Name="Portions" x:Uid="Portions" >
            <DataTemplate>
                <Grid>
                    <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
                    <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </DataTemplate>
        </HubSection>
        <HubSection x:Name="Ingredients" x:Uid="Ingredients" >
            <DataTemplate>
                <Grid/>
            </DataTemplate>
        </HubSection>
    </Hub>
</Page>
